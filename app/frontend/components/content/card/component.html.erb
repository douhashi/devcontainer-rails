<div class="bg-gray-800 rounded-lg p-6 hover:bg-gray-700 transition-colors" 
     data-content-id="<%= item.id %>"
     data-completion-status="<%= completion_status %>">
  
  <!-- Header with title and status badge -->
  <div class="flex justify-between items-start mb-3">
    <h3 class="text-lg font-semibold text-gray-100 flex-grow">
      <%= link_to item.theme, item, class: "hover:text-blue-400 transition-colors" %>
    </h3>
    <div class="ml-2 flex-shrink-0">
      <%= render StatusBadge::Component.new(status: completion_status, size: :small) %>
    </div>
  </div>
  
  <!-- Basic info -->
  <div class="text-sm text-gray-300 mb-2">
    <span class="inline-flex items-center gap-1">
      <span>再生時間:</span>
      <span class="text-blue-400"><%= item.duration %>分</span>
    </span>
  </div>
  
  <div class="text-sm text-gray-400 mb-4 line-clamp-2">
    <%= truncate(item.audio_prompt, length: 80) %>
  </div>
  
  <!-- Track progress section -->
  <div class="mb-4">
    <div class="flex justify-between items-center mb-2">
      <span class="text-sm font-medium text-gray-300">トラック進捗</span>
      <span class="text-sm text-gray-400">
        <%= track_progress[:completed] %>/<%= track_progress[:total] %>
      </span>
    </div>
    <%= render ProgressBar::Component.new(
      percentage: track_progress[:percentage],
      variant: progress_variant,
      size: :small,
      show_percentage: false
    ) %>
  </div>
  
  <!-- Artwork status -->
  <div class="flex items-center gap-2 mb-4">
    <span class="text-sm text-gray-300">アートワーク:</span>
    <span class="artwork-status inline-flex items-center gap-1">
      <span class="<%= artwork_icon_classes %> text-lg"><%= artwork_icon_text %></span>
      <span class="text-sm text-gray-400">
        <%= artwork_status == :configured ? '設定済み' : '未設定' %>
      </span>
    </span>
  </div>
  
  <!-- Actions and date -->
  <div class="flex justify-between items-center mt-4 pt-4 border-t border-gray-700">
    <div class="flex gap-2">
      <%= link_to "編集", edit_content_path(item), class: "text-sm text-blue-400 hover:text-blue-300" %>
      <%= link_to "削除", content_path(item), 
          data: { turbo_method: :delete, turbo_confirm: "削除しますか？" },
          class: "text-sm text-red-400 hover:text-red-300" %>
    </div>
    <time class="text-sm text-gray-400">
      <%= item.created_at.strftime("%Y-%m-%d") %>
    </time>
  </div>
</div>