<div class="bg-gray-800 rounded-lg overflow-hidden hover:bg-gray-700 transition-colors" 
     data-content-id="<%= item.id %>"
     data-completion-status="<%= completion_status %>">
  
  <div class="flex flex-col">
    <!-- Artwork thumbnail section -->
    <div class="w-full aspect-[4/3] bg-gray-900">
      <% if artwork_thumbnail_url %>
        <%= image_tag artwork_thumbnail_url, 
            alt: item.theme,
            class: "w-full h-full object-cover",
            loading: "lazy" %>
      <% else %>
        <!-- Placeholder with gradient -->
        <div class="w-full h-full bg-gradient-to-br from-gray-700 to-gray-800 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-12 h-12 text-gray-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
          </svg>
        </div>
      <% end %>
    </div>

    <!-- Content information section -->
    <div class="p-4">
      <!-- Title -->
      <h3 class="text-lg font-semibold text-gray-100 mb-2 line-clamp-1">
        <%= link_to item.theme, item, class: "hover:text-blue-400 transition-colors" %>
      </h3>
      
      <!-- Status Badge and Duration -->
      <div class="flex items-center justify-between mb-3">
        <div class="text-sm text-gray-400">
          <span>再生時間: </span>
          <span class="text-gray-300"><%= formatted_duration %></span>
        </div>
        <div class="flex-shrink-0">
          <%= render StatusBadge::Component.new(status: completion_status, size: :small) %>
        </div>
      </div>

      <!-- Progress icons section -->
      <div class="flex items-center gap-4">
        <!-- Artwork icon -->
        <div class="flex items-center gap-1" title="アートワーク<%= artwork_status == :configured ? '設定済み' : '未設定' %>">
          <span class="<%= artwork_icon_classes %>">
            <%= image_icon_svg %>
          </span>
        </div>

        <!-- Track completion icon -->
        <div class="flex items-center gap-1" title="トラック<%= item.tracks_complete? ? '完成' : '未完成' %>">
          <span class="<%= tracks_complete_icon_class %>">
            <%= music_icon_svg %>
          </span>
        </div>

        <!-- Video generation icon -->
        <div class="flex items-center gap-1" title="動画<%= item.video_generated? ? '生成済み' : '未生成' %>">
          <span class="<%= video_generated_icon_class %>">
            <%= video_icon_svg %>
          </span>
        </div>

        <!-- Created date (right aligned) -->
        <div class="ml-auto">
          <time class="text-xs text-gray-500">
            <%= item.created_at.strftime("%Y-%m-%d") %>
          </time>
        </div>
      </div>
    </div>
  </div>
</div>