<tr id="<%= dom_id %>" class="music-generation hover:bg-gray-700 transition-colors">
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
    #<%= music_generation_id %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm">
    <%= render status_badge_component %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
    <%= formatted_total_duration %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
    <%= tracks_count %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
    <%= formatted_created_at %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
    <%= form_with url: delete_url, method: :delete, local: true, class: "inline", data: { turbo_frame: "_top" } do |form| %>
      <%= form.button type: "submit",
          class: "text-red-400 hover:text-red-300 hover:bg-red-900/20 px-3 py-1 rounded text-sm transition-colors",
          data: { 
            turbo_confirm: delete_confirmation_message,
            method: "delete"
          } do %>
        削除
      <% end %>
    <% end %>
  </td>
</tr>