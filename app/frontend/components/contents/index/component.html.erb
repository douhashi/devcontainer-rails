<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-100">コンテンツ一覧</h1>
    <%= link_to "新規作成", new_content_path, 
        class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
  </div>
  
  <% if empty_state? %>
    <div class="text-center py-12">
      <p class="text-gray-400 mb-4">コンテンツがまだありません</p>
      <%= link_to "最初のコンテンツを作成", new_content_path, 
          class: "text-blue-400 hover:text-blue-300 transition-colors" %>
    </div>
  <% else %>
    <!-- Status Filter -->
    <%= render StatusFilter::Component.new(selected_status: filter_status) %>
    
    <!-- Status Summary -->
    <div class="filter-summary mb-6 p-4 bg-gray-800 rounded-lg">
      <p class="text-gray-300 text-sm">
        <%= status_summary_text %>
      </p>
    </div>
    
    <!-- Content Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <% contents.each do |content| %>
        <div data-testid="content-card">
          <%= render Content::Card::Component.new(item: content) %>
        </div>
      <% end %>
    </div>
    
    <!-- Pagination -->
    <% if paginated? %>
      <div data-testid="pagination" class="mt-8 flex justify-center">
        <%# ページネーションは後で実装 %>
      </div>
    <% end %>
  <% end %>
</div>
