<div class="container mx-auto px-4 py-8">
  
  <div class="mb-6">
    <%= link_to contents_path, 
        class: "text-blue-400 hover:text-blue-300 transition-colors inline-block" do %>
      <%= render Icon::Component.new(
        name: :arrow_left,
        size: :lg,
        aria_label: "一覧に戻る"
      ) %>
    <% end %>
  </div>
  
  <!-- Toast notification container -->
  <div id="notifications" class="fixed top-4 right-4 z-50 space-y-2"></div>

  <!-- 1. コンテンツ概要セクション -->
  <div class="bg-gray-800 rounded-lg p-6 mb-6">
    <!-- Header with title and status -->
    <div class="flex justify-between items-start mb-6">
      <h1 class="text-3xl font-bold text-gray-100 flex-grow">
        <%= item.theme %>
      </h1>
      <div class="ml-4 flex-shrink-0">
        <%= render StatusBadge::Component.new(status: completion_status) %>
      </div>
    </div>


    <!-- Work Overview (combined Audio Prompt and Basic Info) -->
    <div class="work-overview-section">
      <h2 class="text-xl font-bold text-gray-200 mb-4">作品概要</h2>
      
      <!-- Audio Prompt -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-300 mb-3">音楽生成プロンプト</h3>
        <div class="bg-gray-900 rounded-lg p-4">
          <p class="text-gray-200 whitespace-pre-wrap"><%= item.audio_prompt %></p>
        </div>
      </div>

      <!-- Basic Info -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <p class="text-gray-400 text-sm mb-1">再生時間</p>
          <p class="text-gray-200 text-lg font-medium"><%= item.duration_min %> 分</p>
        </div>
        <div>
          <p class="text-gray-400 text-sm mb-1">作成日時</p>
          <p class="text-gray-200"><%= formatted_date(item.created_at) %></p>
        </div>
        <div>
          <p class="text-gray-400 text-sm mb-1">更新日時</p>
          <p class="text-gray-200"><%= formatted_date(item.updated_at) %></p>
        </div>
      </div>
    </div>

    <!-- Actions (moved to after Work Overview) -->
    <div class="flex gap-4 mt-6">
      <%= render Button::Component.new(
        href: edit_content_path(item),
        variant: :primary,
        size: :md,
        aria_label: "編集"
      ) do %>
        <%= render Icon::Component.new(name: :edit, size: :md) %>
      <% end %>
      <%= render Button::Component.new(
        href: content_path(item),
        variant: :danger,
        size: :md,
        aria_label: "削除",
        data: { 
          turbo_method: :delete,
          controller: "delete-confirmation",
          action: "click->delete-confirmation#confirm",
          delete_confirmation_message_value: "本当に削除しますか？"
        }
      ) do %>
        <%= render Icon::Component.new(name: :delete, size: :md) %>
      <% end %>
    </div>
  </div>

  <!-- 2. アートワークセクション -->
  <div class="bg-gray-800 rounded-lg p-6 mb-6 artwork-section">
    <h2 class="text-xl font-bold text-gray-100 mb-4">アートワーク</h2>
    <%= render ArtworkDragDrop::Component.new(content_record: item) %>

    <% if item.artwork.present? %>
      <div class="mt-6">
        <%= render ArtworkVariations::GridComponent.new(artwork: item.artwork) %>
      </div>
    <% end %>
  </div>

  <!-- 3. 音楽生成リクエストセクション -->
  <div class="bg-gray-800 rounded-lg p-6 mb-6 music-generations-section">
    <h2 class="text-xl font-bold text-gray-200 mb-4">音楽生成リクエスト</h2>
    <div class="mb-4">
      <%= render TrackGenerationControls::Component.new(
        content_record: item,
        can_generate_more: true
      ) %>
      <%= render MusicGenerationStatusSummary::Component.new(
        content_record: item
      ) %>
    </div>
    <%= render MusicGenerationList::Component.new(
      tracks: item.tracks.includes(:content).order(created_at: :desc)
    ) %>
  </div>

  <!-- 4. 音源生成セクション -->
  <div class="bg-gray-800 rounded-lg p-6 mb-6">
    <h2 class="text-xl font-bold text-gray-200 mb-4">音源生成</h2>
    <div class="space-y-4">
      <%= render AudioGenerationButton::Component.new(content_record: item) %>
      <%= render AudioInfoCard::Component.new(audio: item.audio) %>
      <%= render AudioUsedTracksTable::Component.new(audio: item.audio) %>
    </div>
  </div>

  <!-- 5. 動画生成セクション -->
  <div class="bg-gray-800 rounded-lg p-6">
    <!-- Header with title and status -->
    <div class="flex justify-between items-start mb-6">
      <h2 class="text-xl font-bold text-gray-200 flex-grow">動画生成</h2>
      <% video_component = VideoGenerationButton::Component.new(content_record: item) %>
      <% if video_component.video_exists? %>
        <div class="ml-4 flex-shrink-0">
          <%= render StatusBadge::Component.new(status: video_component.video_status.to_sym, size: :small) %>
        </div>
      <% end %>
    </div>
    <%= render video_component %>
</div>