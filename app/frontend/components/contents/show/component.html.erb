<div class="container mx-auto px-4 py-8" 
     data-turbo-stream-source="content_<%= item.id %>_tracks"
     data-turbo-stream-notifications="content_<%= item.id %>_notifications">
  
  <div class="mb-6">
    <%= link_to "← 一覧に戻る", contents_path, 
        class: "text-blue-400 hover:text-blue-300 transition-colors" %>
  </div>
  
  <!-- Toast notification container -->
  <div id="notifications" class="fixed top-4 right-4 z-50 space-y-2"></div>

  <div class="bg-gray-800 rounded-lg p-8">
    <!-- Header with title and status -->
    <div class="flex justify-between items-start mb-6">
      <h1 class="text-3xl font-bold text-gray-100 flex-grow">
        <%= item.theme %>
      </h1>
      <div class="ml-4 flex-shrink-0">
        <%= render StatusBadge::Component.new(status: completion_status) %>
      </div>
    </div>

    <!-- Status Overview -->
    <div class="status-overview mb-8 p-6 bg-gray-900 rounded-lg">
      <div class="flex items-center mb-4">
        <span class="text-2xl mr-3"><%= status_icon %></span>
        <div>
          <h2 class="text-lg font-semibold text-gray-200">制作ステータス</h2>
          <p class="text-gray-400"><%= completion_message %></p>
        </div>
      </div>

      <!-- Progress Circle and Stats -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="progress-circle">
          <div class="mb-4">
            <h3 class="text-md font-medium text-gray-300 mb-2">生成回数</h3>
            <div class="flex items-center justify-center">
              <%= render ProgressBar::Component.new(
                percentage: music_generation_progress[:percentage],
                label: "MusicGeneration",
                variant: progress_variant,
                size: :medium
              ) %>
            </div>
            <p class="text-center text-gray-400 mt-2">
              <%= music_generation_progress[:completed] %>/<%= music_generation_progress[:total] %>回 完了
            </p>
          </div>
          
          <div class="mt-4">
            <h3 class="text-md font-medium text-gray-300 mb-2">トラック数</h3>
            <div class="flex items-center justify-center">
              <%= render ProgressBar::Component.new(
                percentage: track_progress[:percentage],
                label: "トラック進捗",
                variant: progress_variant,
                size: :medium
              ) %>
            </div>
            <p class="text-center text-gray-400 mt-2">
              <%= track_progress[:completed] %>/<%= track_progress[:total] %>曲 完了
            </p>
          </div>
        </div>

        <div class="track-status-breakdown">
          <h3 class="text-md font-medium text-gray-300 mb-3">詳細ステータス</h3>
          <div class="space-y-2">
            <% track_status_items.each do |status_item| %>
              <div class="track-status-item flex justify-between items-center p-2 bg-gray-800 rounded">
                <div class="flex items-center">
                  <span class="text-lg mr-2"><%= status_item[:icon] %></span>
                  <span class="text-gray-300"><%= status_item[:label] %></span>
                </div>
                <span class="<%= status_item[:color] %> font-semibold">
                  <%= status_item[:count] %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Basic Info -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div>
        <p class="text-gray-400 text-sm mb-1">再生時間</p>
        <p class="text-gray-200 font-medium"><%= item.duration %>分</p>
      </div>
      <div>
        <p class="text-gray-400 text-sm mb-1">作成日時</p>
        <p class="text-gray-200"><%= formatted_date(item.created_at) %></p>
      </div>
      <div>
        <p class="text-gray-400 text-sm mb-1">更新日時</p>
        <p class="text-gray-200"><%= formatted_date(item.updated_at) %></p>
      </div>
    </div>

    <!-- Audio Prompt -->
    <div class="mb-8">
      <p class="text-gray-400 text-sm mb-2">音楽生成プロンプト</p>
      <div class="bg-gray-900 rounded-lg p-4">
        <p class="text-gray-200 whitespace-pre-wrap"><%= item.audio_prompt %></p>
      </div>
    </div>

    <!-- Artwork Section with Status -->
    <div class="artwork-section mb-8">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-bold text-gray-200">アートワーク</h2>
        <div class="flex items-center gap-2">
          <span class="<%= artwork_status == :configured ? 'text-green-400' : 'text-gray-400' %>">
            <%= artwork_status == :configured ? '✓ 設定済み' : '○ 未設定' %>
          </span>
        </div>
      </div>
      
      <% if artwork_preview_available? %>
        <div class="mb-4 p-4 bg-gray-900 rounded-lg">
          <img src="<%= item.artwork.image.url %>" alt="Content Artwork" 
               class="max-w-xs rounded-lg shadow-lg" />
        </div>
      <% end %>
      
      <%= render Artwork::Form::Component.new(content_record: item) %>
    </div>

    <!-- Track Counter -->
    <div class="mb-6">
      <%= render TrackCounter::Component.new(content_record: item) %>
    </div>
    
    <!-- Track Generation section -->
    <div class="mb-8">
      <h2 class="text-xl font-bold text-gray-200 mb-4">BGM生成</h2>
      <%= render TrackGenerationControls::Component.new(
        content_record: item,
        can_generate_more: item.tracks.count < 100
      ) %>
    </div>

    <!-- Audio Generation section -->
    <div class="mb-8">
      <h2 class="text-xl font-bold text-gray-200 mb-4">音源生成</h2>
      <%= render AudioGenerationButton::Component.new(content_record: item) %>
    </div>

    <!-- Video Generation section -->
    <div class="mb-8">
      <h2 class="text-xl font-bold text-gray-200 mb-4">動画生成</h2>
      <%= render VideoGenerationButton::Component.new(content_record: item) %>
    </div>

    <!-- Track List -->
    <% if item.tracks.any? %>
    <div class="tracks-section mb-8">
      <h2 class="text-xl font-bold text-gray-200 mb-4">トラック一覧</h2>
      <%= render Tracks::List::Component.new(tracks: item.tracks) %>
    </div>
    <% end %>

    <!-- Next Actions -->
    <% if next_actions.any? %>
    <div class="next-actions mb-8 p-4 bg-blue-900 bg-opacity-20 border border-blue-500 rounded-lg">
      <h3 class="text-lg font-semibold text-blue-300 mb-3">
        💡 推奨アクション
      </h3>
      <ul class="space-y-2">
        <% next_actions.each do |action| %>
          <li class="flex items-center text-blue-200">
            <span class="mr-2">→</span>
            <%= action %>
          </li>
        <% end %>
      </ul>
    </div>
    <% else %>
    <div class="next-actions hidden mb-8 p-4 bg-green-900 bg-opacity-20 border border-green-500 rounded-lg">
      <div class="flex items-center text-green-300">
        <span class="text-xl mr-2">🎉</span>
        <span>すべての作業が完了しました！</span>
      </div>
    </div>
    <% end %>

    <!-- Actions -->
    <div class="flex gap-4">
      <%= link_to "編集", edit_content_path(item), 
          class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
      <%= link_to "削除", content_path(item),
          data: { 
            turbo_method: :delete,
            controller: "delete-confirmation",
            action: "click->delete-confirmation#confirm",
            delete_confirmation_message_value: "本当に削除しますか？"
          },
          class: "px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors" %>
    </div>
  </div>
</div>

