<div class="track-counter bg-white rounded-lg shadow p-4" id="track-counter">
  <div class="flex justify-between items-center mb-2">
    <h3 class="text-sm font-medium text-gray-700">Track生成状況</h3>
    <span class="text-sm font-semibold text-gray-900">
      <%= current_count %> / <%= max_count %>
    </span>
  </div>
  
  <div class="w-full bg-gray-200 rounded-full h-2 mb-2">
    <div class="<%= progress_bar_classes %>" style="width: <%= progress_percentage %>%"></div>
  </div>
  
  <div class="flex justify-between items-center">
    <span class="<%= status_text_classes %> text-sm">
      <%= status_text %>
    </span>
    <% unless can_generate_more? %>
      <span class="text-xs text-red-500">
        <svg class="inline w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        生成上限
      </span>
    <% end %>
  </div>
</div>

