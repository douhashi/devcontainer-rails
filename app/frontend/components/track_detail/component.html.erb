<div class="track-detail bg-white rounded-lg shadow-sm p-6 mt-4">
  <h3 class="text-lg font-semibold mb-4">Track メタデータ</h3>
  
  <div class="space-y-3">
    <% if track.metadata_title.present? %>
      <div class="flex">
        <span class="font-medium text-gray-600 w-32">タイトル:</span>
        <span class="text-gray-900"><%= track.metadata_title %></span>
      </div>
    <% end %>
    
    <% if track.metadata_tags.present? %>
      <div class="flex">
        <span class="font-medium text-gray-600 w-32">タグ:</span>
        <span class="text-gray-900"><%= formatted_tags %></span>
      </div>
    <% end %>
    
    <% if track.duration_sec.present? %>
      <div class="flex">
        <span class="font-medium text-gray-600 w-32">再生時間:</span>
        <span class="text-gray-900"><%= track.formatted_duration %></span>
      </div>
    <% end %>
    
    <% if track.metadata_model_name.present? %>
      <div class="flex">
        <span class="font-medium text-gray-600 w-32">生成モデル:</span>
        <span class="text-gray-900"><%= track.metadata_model_name %></span>
      </div>
    <% end %>
    
    <% if track.metadata_audio_id.present? %>
      <div class="flex">
        <span class="font-medium text-gray-600 w-32">Audio ID:</span>
        <span class="text-gray-900 text-xs font-mono"><%= track.metadata_audio_id %></span>
      </div>
    <% end %>
    
    <% if track.metadata_generated_prompt.present? %>
      <div>
        <span class="font-medium text-gray-600 block mb-1">生成プロンプト:</span>
        <div class="bg-gray-50 rounded p-3 text-sm text-gray-700 whitespace-pre-wrap">
          <%= truncated_prompt %>
        </div>
      </div>
    <% end %>
  </div>
</div>