<div id="music_generation_<%= music_generation.id %>" class="bg-white rounded-lg shadow p-6 mb-4">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
    <div class="flex items-center space-x-3 mb-2 sm:mb-0">
      <h3 class="text-lg font-semibold text-gray-900">
        <%= card_title %>
      </h3>
      <%= render status_badge_component %>
    </div>
    <div class="text-sm text-gray-500">
      <%= formatted_created_at %>
    </div>
  </div>

  <div class="border-t pt-4">
    <% if waiting_message.present? %>
      <div class="text-center py-8">
        <% if music_generation.processing? %>
          <div class="inline-flex items-center space-x-2">
            <svg class="animate-spin h-5 w-5 text-yellow-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="text-gray-600"><%= waiting_message %></span>
          </div>
        <% elsif music_generation.failed? %>
          <div class="inline-flex items-center space-x-2">
            <svg class="h-5 w-5 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-red-600"><%= waiting_message %></span>
          </div>
        <% else %>
          <span class="text-gray-600"><%= waiting_message %></span>
        <% end %>
      </div>
    <% elsif has_tracks? %>
      <div class="overflow-x-auto">
        <%= render track_table_component %>
      </div>
    <% else %>
      <div class="text-center py-8 text-gray-500">
        トラックがありません
      </div>
    <% end %>
  </div>
</div>