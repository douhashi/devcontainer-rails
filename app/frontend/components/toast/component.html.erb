<div class="toast toast--<%= type %> <%= toast_classes %>"
     data-controller="toast"
     data-toast-duration-value="5000"
     data-turbo-temporary>
  <div class="flex-shrink-0">
    <%= icon_for_type %>
  </div>
  <div class="flex-1">
    <p class="text-sm font-medium">
      <%= message %>
    </p>
  </div>
  <div class="flex-shrink-0">
    <button type="button"
            class="inline-flex text-gray-400 hover:text-gray-500 focus:outline-none focus:text-gray-500 transition ease-in-out duration-150"
            data-action="click->toast#close">
      <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>
</div>

