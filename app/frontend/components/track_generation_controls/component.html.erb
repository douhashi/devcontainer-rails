<div class="generation-controls flex flex-col sm:flex-row gap-4">
  <%= button_to single_generation_path,
                method: :post,
                class: single_button_classes,
                data: { turbo_method: "post" } do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
    </svg>
    <span>1件生成</span>
    <span class="text-xs opacity-75">(1件)</span>
  <% end %>
  
  <%= button_to bulk_generation_path,
                method: :post,
                class: bulk_button_classes,
                data: { 
                  turbo_method: "post",
                  turbo_confirm: "複数のTrackを一括生成します。よろしいですか？"
                } do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
    </svg>
    <span>一括生成</span>
    <span class="text-xs opacity-75">(<%= required_music_generation_count %>件)</span>
  <% end %>
</div>

