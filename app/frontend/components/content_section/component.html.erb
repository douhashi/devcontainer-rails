<div class="<%= css_classes %>">
  <% if header? || badge? || title.present? %>
    <div class="content-section-header flex justify-between items-start mb-6">
      <% if header? %>
        <%= header %>
      <% else %>
        <h2 class="text-xl font-bold text-gray-200 flex-grow">
          <%= title %>
        </h2>
      <% end %>
      <% if badge? %>
        <div class="ml-4 flex-shrink-0">
          <%= badge %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="content-section-body">
    <%= content %>
  </div>

  <% if actions? %>
    <div class="content-section-actions flex justify-end gap-4 mt-6">
      <% actions.each do |action| %>
        <%= action %>
      <% end %>
    </div>
  <% end %>
</div>