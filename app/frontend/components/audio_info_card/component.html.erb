<div class="audio-info-card">
  <% if audio.present? %>
    <div class="bg-gray-800 rounded-lg p-6 space-y-4">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-white">音源情報</h3>
        <%= render StatusBadge::Component.new(
          status: status_symbol
        ) %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="space-y-3">
          <div>
            <p class="text-sm text-gray-400 mb-1">長さ</p>
            <p class="text-white font-medium"><%= formatted_duration %></p>
          </div>
          
          <div>
            <p class="text-sm text-gray-400 mb-1">作成日時</p>
            <p class="text-white font-medium"><%= formatted_date(audio.created_at) %></p>
          </div>
        </div>

        <div class="space-y-3">
          <div>
            <p class="text-sm text-gray-400 mb-1">ステータス</p>
            <div class="mt-1">
              <%= render StatusBadge::Component.new(status: status_symbol, size: :small) %>
            </div>
          </div>
          
          <div>
            <p class="text-sm text-gray-400 mb-1">更新日時</p>
            <p class="text-white font-medium"><%= formatted_date(audio.updated_at) %></p>
          </div>
        </div>
      </div>

      <div class="pt-4 border-t border-gray-700">
        <%= render Button::Component.new(
          text: "削除",
          variant: :danger,
          size: :sm,
          data: {
            turbo_method: :delete,
            turbo_confirm: "この音源を削除してもよろしいですか？",
            controller: "delete-confirmation",
            action: "click->delete-confirmation#confirm"
          },
          href: delete_path
        ) %>
      </div>
    </div>
  <% else %>
    <div class="empty-state bg-gray-800 rounded-lg p-8 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
      </svg>
      <h3 class="text-lg font-semibold text-white mb-2">音源未生成</h3>
      <p class="text-gray-400">音源を生成するには「音源生成」ボタンをクリックしてください</p>
    </div>
  <% end %>
</div>