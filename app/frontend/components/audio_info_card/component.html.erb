<div class="audio-info-card">
  <% if audio.present? %>
    <!-- Header with title -->
    <div class="mb-4">
      <h3 class="text-lg font-semibold text-white">音源情報</h3>
    </div>

    <!-- Audio info in separate row -->
    <div class="flex flex-wrap items-center gap-4 text-sm mb-3">
      <!-- Duration -->
      <div class="flex items-center gap-2">
        <span class="text-gray-400">長さ:</span>
        <span class="text-white font-medium"><%= formatted_duration %></span>
      </div>

      <!-- Processing time -->
      <div class="flex items-center gap-2">
        <span class="text-gray-400">作成時間:</span>
        <span class="text-white font-medium"><%= processing_time %></span>
      </div>
    </div>

    <!-- Player in separate row -->
    <% if audio.status == "completed" && audio.audio.present? %>
      <div class="mt-3">
        <%= render InlineAudioPlayer::Component.new(content_record: audio.content, size: :small) %>
      </div>
    <% end %>
  <% else %>
    <div class="empty-state rounded-lg p-8 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
      </svg>
      <h3 class="text-lg font-semibold text-white mb-2">音源未生成</h3>
      <p class="text-gray-400">音源を生成するには「音源生成」ボタンをクリックしてください</p>
    </div>
  <% end %>
</div>