<div class="p-8 space-y-4">
  <h2 class="text-2xl font-bold mb-6">MusicGeneration Status Badges</h2>
  
  <div class="grid grid-cols-2 gap-8">
    <div>
      <h3 class="text-lg font-semibold mb-2">Pending</h3>
      <% music_generation_pending = MusicGeneration.new(
        id: 1,
        status: :pending,
        task_id: "task_pending",
        prompt: "Create a lo-fi hip hop beat",
        generation_model: "V4_5PLUS"
      ) %>
      <%= render MusicGenerationStatusBadge::Component.new(music_generation: music_generation_pending) %>
    </div>
    
    <div>
      <h3 class="text-lg font-semibold mb-2">Processing</h3>
      <% music_generation_processing = MusicGeneration.new(
        id: 2,
        status: :processing,
        task_id: "task_processing",
        prompt: "Create a lo-fi hip hop beat",
        generation_model: "V4_5PLUS"
      ) %>
      <%= render MusicGenerationStatusBadge::Component.new(music_generation: music_generation_processing) %>
    </div>
    
    <div>
      <h3 class="text-lg font-semibold mb-2">Completed</h3>
      <% music_generation_completed = MusicGeneration.new(
        id: 3,
        status: :completed,
        task_id: "task_completed",
        prompt: "Create a lo-fi hip hop beat",
        generation_model: "V4_5PLUS"
      ) %>
      <%= render MusicGenerationStatusBadge::Component.new(music_generation: music_generation_completed) %>
    </div>
    
    <div>
      <h3 class="text-lg font-semibold mb-2">Failed</h3>
      <% music_generation_failed = MusicGeneration.new(
        id: 4,
        status: :failed,
        task_id: "task_failed",
        prompt: "Create a lo-fi hip hop beat",
        generation_model: "V4_5PLUS"
      ) %>
      <%= render MusicGenerationStatusBadge::Component.new(music_generation: music_generation_failed) %>
    </div>
  </div>
</div>