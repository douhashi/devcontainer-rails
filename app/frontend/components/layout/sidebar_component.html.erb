<aside class="layout-sidebar" data-testid="layout-sidebar" data-layout-target="sidebar">
  <nav class="h-full flex flex-col">
    <div class="flex-1 px-4 py-6 space-y-2">
      <% navigation_items.each do |item| %>
        <%= link_to item[:path], 
            class: "flex items-center gap-3 px-3 py-2 rounded-md text-sm font-medium transition-colors #{active_item?(item[:path]) ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}", 
            aria: { current: active_item?(item[:path]) ? 'page' : false } do %>
          <span data-testid="nav-icon">
            <%= icon_svg(item[:icon]) %>
          </span>
          <%= item[:name] %>
        <% end %>
      <% end %>
    </div>
    
    <div class="p-4 border-t border-gray-700">
      <div class="text-xs text-gray-500">
        Lofi BGM System
      </div>
    </div>
  </nav>
</aside>

<!-- Mobile sidebar overlay -->
<div class="fixed inset-0 bg-gray-900 bg-opacity-75 z-30 md:hidden"
     data-testid="sidebar-overlay"
     data-layout-target="overlay"
     data-action="click->layout#closeSidebar"
     style="display: none;"></div>