<tr class="<%= row_classes %>" data-generation-id="<%= music_generation_id %>" data-track-id="<%= track_id %>">
  <% if is_group_start %>
    <td rowspan="<%= group_size %>" class="px-6 py-4 text-sm text-gray-300 border-r border-gray-700">
      <%= music_generation_id %>
    </td>
  <% end %>
  
  <td class="px-6 py-4 text-sm text-gray-300">
    <%= track_id %>
  </td>
  
  <td class="px-6 py-4 text-sm text-gray-300">
    <%= formatted_duration %>
  </td>
  
  <td class="px-6 py-4 text-sm">
    <% if show_audio_player? %>
      <div class="w-64">
        <%= render audio_player_component %>
      </div>
    <% elsif track.status.processing? %>
      <span class="text-gray-400">処理中...</span>
    <% else %>
      <span class="text-gray-500">利用不可</span>
    <% end %>
  </td>
  
  <td class="px-6 py-4 text-sm">
    <%= button_to "削除", delete_path, 
        method: :delete,
        form: { 
          data: { 
            turbo_method: "delete",
            turbo_confirm: "このTrackを削除してもよろしいですか？" 
          }
        },
        class: "px-3 py-1 bg-red-600 hover:bg-red-700 text-white rounded-md text-xs font-medium transition-colors" %>
  </td>
</tr>