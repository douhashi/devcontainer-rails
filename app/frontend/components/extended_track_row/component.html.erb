<tr class="<%= row_classes %>" data-generation-id="<%= music_generation_id %>" data-track-id="<%= track_id %>">
  <td class="px-6 py-2 text-sm text-gray-300">
    <%= "##{track_number}" %>
  </td>
  
  <td class="px-6 py-2 text-sm text-gray-300">
    <%= formatted_duration %>
  </td>
  
  <td class="px-6 py-2 text-sm">
    <% if show_audio_player? %>
      <%= render play_button_component %>
    <% elsif track.status.processing? %>
      <span class="text-gray-400">処理中...</span>
    <% else %>
      <span class="text-gray-500">利用不可</span>
    <% end %>
  </td>
  
  <td class="px-6 py-2 text-sm">
    <%= button_to delete_path, 
        method: :delete,
        form: { 
          data: { 
            turbo_method: "delete",
            turbo_confirm: "このTrackを削除してもよろしいですか？" 
          },
          class: "inline"
        },
        class: "text-red-500 hover:text-red-600 transition-colors" do %>
      <%= render Icon::Component.new(name: :delete, size: :sm) %>
    <% end %>
  </td>
</tr>