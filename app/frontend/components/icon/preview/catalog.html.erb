<div class="p-6">
  <h2 class="text-2xl font-bold mb-6">Icon Catalog</h2>
  
  <% sizes.each do |size| %>
    <div class="mb-8">
      <h3 class="text-lg font-semibold mb-4 capitalize"><%= size %> Size</h3>
      <div class="grid grid-cols-4 gap-6">
        <% icon_names.each do |name| %>
          <div class="flex flex-col items-center">
            <%= render Icon::Component.new(name: name, size: size) %>
            <span class="text-xs text-gray-600 mt-2"><%= name %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>