<tr id="<%= dom_id %>" class="track hover:bg-gray-700 transition-colors">
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
    #<%= track_id %>
  </td>
  <td class="px-6 py-4 text-sm text-gray-100">
    <%= track_title %>
  </td>
  <% if show_content_column %>
  <td class="px-6 py-4 text-sm">
    <% if content_link? %>
      <%= link_to content_theme, Rails.application.routes.url_helpers.content_path(track.content), 
          class: "text-blue-400 hover:text-blue-300 hover:underline" %>
    <% else %>
      <span class="text-gray-500">-</span>
    <% end %>
  </td>
  <% end %>
  <td class="px-6 py-4 whitespace-nowrap text-sm">
    <%= render track_status_badge_component %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
    <%= formatted_created_at %>
  </td>
  <td class="px-6 py-4">
    <% if show_audio_player? %>
      <%= render play_button_component %>
    <% elsif show_no_audio_message? %>
      <span class="text-gray-500 text-sm">音声なし</span>
    <% elsif show_processing_message? %>
      <span class="text-yellow-400 text-sm">処理中...</span>
    <% else %>
      <span class="text-gray-500 text-sm">-</span>
    <% end %>
  </td>
</tr>