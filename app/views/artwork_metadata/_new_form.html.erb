<%= form_with(url: content_artwork_metadata_path(content), scope: :artwork_metadata, local: false, html: { class: "space-y-4" }) do |form| %>
  <div class="space-y-2">
    <%= form.label :positive_prompt, "ポジティブプロンプト", class: "block text-sm font-medium text-gray-300" %>
    <%= form.text_area :positive_prompt,
                       rows: 4,
                       placeholder: "beautiful landscape, digital art, vibrant colors...",
                       class: "w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                       required: true %>
  </div>

  <div class="space-y-2">
    <%= form.label :negative_prompt, "ネガティブプロンプト", class: "block text-sm font-medium text-gray-300" %>
    <%= form.text_area :negative_prompt,
                       rows: 4,
                       placeholder: "blurry, low quality, distorted...",
                       class: "w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                       required: true %>
  </div>

  <div class="flex justify-end">
    <%= form.submit "アートワークメタデータを作成",
                    class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
  </div>
<% end %>