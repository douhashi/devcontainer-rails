<div class="space-y-4">
  <div class="space-y-2">
    <div class="flex items-center justify-between">
      <label class="text-sm font-medium text-gray-400">ポジティブプロンプト</label>
      <button data-controller="clipboard"
              data-clipboard-content-value="<%= artwork_metadata.positive_prompt %>"
              data-action="click->clipboard#copy"
              class="inline-flex items-center gap-1 px-2 py-1 text-xs bg-gray-700 text-gray-300 rounded hover:bg-gray-600 transition-colors"
              title="クリップボードにコピー">
        <%= render Icon::Component.new(name: "copy", size: "sm") %>
        <span>コピー</span>
      </button>
    </div>
    <div class="bg-gray-700 rounded-lg p-3">
      <p class="text-gray-300 whitespace-pre-wrap break-words"><%= artwork_metadata.positive_prompt %></p>
    </div>
  </div>

  <div class="space-y-2">
    <div class="flex items-center justify-between">
      <label class="text-sm font-medium text-gray-400">ネガティブプロンプト</label>
      <button data-controller="clipboard"
              data-clipboard-content-value="<%= artwork_metadata.negative_prompt %>"
              data-action="click->clipboard#copy"
              class="inline-flex items-center gap-1 px-2 py-1 text-xs bg-gray-700 text-gray-300 rounded hover:bg-gray-600 transition-colors"
              title="クリップボードにコピー">
        <%= render Icon::Component.new(name: "copy", size: "sm") %>
        <span>コピー</span>
      </button>
    </div>
    <div class="bg-gray-700 rounded-lg p-3">
      <p class="text-gray-300 whitespace-pre-wrap break-words"><%= artwork_metadata.negative_prompt %></p>
    </div>
  </div>
</div>