<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-100 mb-8">Edit Content</h1>
    
    <div class="bg-gray-800 rounded-lg p-8">
      <%= form_with model: @content do |form| %>
        <%= render Content::Form::Component.new(item: @content, form: form) %>
        
        <div class="flex gap-4 mt-6">
          <%= form.submit "Update Content", 
              class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
          <%= link_to "Cancel", @content, 
              class: "px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>