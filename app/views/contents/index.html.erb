<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-100">Contents</h1>
    <%= link_to "New Content", new_content_path, 
        class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @contents.each do |content| %>
      <%= render Content::Card::Component.new(item: content) %>
    <% end %>
  </div>
  
  <% if @contents.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-400 mb-4">No contents yet.</p>
      <%= link_to "Create your first content", new_content_path, 
          class: "text-blue-400 hover:text-blue-300 transition-colors" %>
    </div>
  <% end %>
</div>
