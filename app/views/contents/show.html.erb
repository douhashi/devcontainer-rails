<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto">
    <div class="bg-gray-800 rounded-lg p-8">
      <h1 class="text-3xl font-bold text-gray-100 mb-4">
        <%= @content.theme %>
      </h1>
      
      <div class="flex gap-4 mt-6">
        <%= link_to "Edit", edit_content_path(@content), 
            class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
        <%= link_to "Delete", content_path(@content), 
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors" %>
        <%= link_to "Back to Contents", contents_path, 
            class: "px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition-colors" %>
      </div>
      
      <div class="mt-8 pt-8 border-t border-gray-700 text-sm text-gray-400">
        <p>Created: <%= @content.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        <p>Updated: <%= @content.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>
    </div>
  </div>
</div>