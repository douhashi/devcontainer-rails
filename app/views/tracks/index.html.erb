<% content_for :title, "Track一覧" %>

<div class="container mx-auto px-4 py-6">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-100">Track一覧</h1>
  </div>

  <%= render 'search_form' %>

  <%= render TrackTable::Component.new(
    tracks: @tracks,
    show_pagination: true,
    show_content_column: true,
    empty_message: "Trackがまだありません"
  ) %>

  <% if !@tracks.any? %>
    <div class="mt-4 text-center">
      <p class="text-gray-500 mb-6">まずはContentを作成してTrackを生成してください</p>
      <%= link_to "コンテンツ一覧へ", contents_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors" %>
    </div>
  <% end %>
</div>