<% content_for :title, "Track一覧" %>

<div class="container mx-auto px-4 py-6">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-100">Track一覧</h1>
  </div>

  <%= render 'search_form' %>

  <% if @tracks.any? %>
    <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-700">
        <thead class="bg-gray-900">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
              ID
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
              タイトル
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
              Content
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
              ステータス
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
              作成日時
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
              プレイヤー
            </th>
          </tr>
        </thead>
        <tbody class="bg-gray-800 divide-y divide-gray-700">
          <% @tracks.each do |track| %>
            <tr id="track_<%= track.id %>" class="track hover:bg-gray-700 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                #<%= track.id %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-100">
                <%= track.metadata_title || "生成中..." %>
              </td>
              <td class="px-6 py-4 text-sm">
                <% if track.content %>
                  <%= link_to track.content.theme, content_path(track.content), 
                      class: "text-blue-400 hover:text-blue-300 hover:underline" %>
                <% else %>
                  <span class="text-gray-500">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= render TrackStatusBadge::Component.new(track: track) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                <%= l(track.created_at, format: :short) %>
              </td>
              <td class="px-6 py-4">
                <% if track.status.completed? && track.audio.present? %>
                  <%= render AudioPlayer::Component.new(track: track) %>
                <% elsif track.status.completed? %>
                  <span class="text-gray-500 text-sm">音声なし</span>
                <% elsif track.status.processing? %>
                  <span class="text-yellow-400 text-sm">処理中...</span>
                <% else %>
                  <span class="text-gray-500 text-sm">-</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="mt-6">
      <%= paginate @tracks %>
    </div>
  <% else %>
    <div class="bg-gray-800 rounded-lg shadow-lg p-8 text-center">
      <p class="text-gray-400 text-lg mb-4">Trackがまだありません</p>
      <p class="text-gray-500 mb-6">まずはContentを作成してTrackを生成してください</p>
      <%= link_to "コンテンツ一覧へ", contents_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors" %>
    </div>
  <% end %>
</div>