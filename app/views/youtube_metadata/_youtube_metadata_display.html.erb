<div class="youtube-metadata-display bg-gray-900 rounded-lg p-4">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- 左カラム -->
    <div class="space-y-4">
      <!-- タイトル -->
      <div>
        <p class="text-gray-400 text-sm mb-1"><%= YoutubeMetadata.human_attribute_name(:title) %></p>
        <p class="text-gray-200 text-lg font-medium"><%= youtube_metadata.title %></p>
      </div>

      <!-- 英語説明 -->
      <div>
        <p class="text-gray-400 text-sm mb-1"><%= YoutubeMetadata.human_attribute_name(:description_en) %></p>
        <div class="text-gray-200 whitespace-pre-wrap bg-gray-800 rounded p-3 text-sm">
          <%= youtube_metadata.description_en %>
        </div>
      </div>
    </div>

    <!-- 右カラム -->
    <div class="space-y-4">
      <!-- ステータス -->
      <div>
        <p class="text-gray-400 text-sm mb-1"><%= YoutubeMetadata.human_attribute_name(:status) %></p>
        <%= render StatusBadge::Component.new(
          status: youtube_metadata.status.to_sym,
          size: :small
        ) %>
      </div>

      <!-- 日本語説明 -->
      <div>
        <p class="text-gray-400 text-sm mb-1"><%= YoutubeMetadata.human_attribute_name(:description_ja) %></p>
        <div class="text-gray-200 whitespace-pre-wrap bg-gray-800 rounded p-3 text-sm">
          <%= youtube_metadata.description_ja %>
        </div>
      </div>
    </div>
  </div>

  <!-- ハッシュタグ（両カラムにまたがる） -->
  <% if youtube_metadata.hashtags.present? %>
    <div class="mt-4 pt-4 border-t border-gray-700">
      <p class="text-gray-400 text-sm mb-1"><%= YoutubeMetadata.human_attribute_name(:hashtags) %></p>
      <p class="text-blue-400"><%= youtube_metadata.hashtags %></p>
    </div>
  <% end %>
</div>