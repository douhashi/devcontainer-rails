<div id="youtube-metadata-section-<%= content.id %>">
  <div class="youtube-metadata-error-container">
    <div class="bg-red-900 border border-red-600 text-red-200 px-4 py-3 rounded mb-4">
      <div class="flex items-center">
        <span class="mr-2">
          <%= render Icon::Component.new(name: "error", size: :sm) %>
        </span>
        <strong>エラーが発生しました</strong>
      </div>
      <ul class="mt-2 list-disc list-inside text-sm">
        <% errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>

    <!-- エラー時も作成フォームを表示 -->
    <%= render 'youtube_metadata/new_form', content: content %>
  </div>
</div>