<div class="new-youtube-metadata-container">
  <div class="text-center py-8">
    <p class="text-gray-400 mb-4">YouTube メタデータが設定されていません</p>

    <%= link_to "#",
                data: {
                  controller: "modal",
                  action: "click->modal#open",
                  modal_target_value: "youtube-metadata-new-modal"
                },
                class: "inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" do %>
      <%= render Icon::Component.new(name: "plus", size: :sm) %>
      <span class="ml-2">YouTube メタデータを作成</span>
    <% end %>
  </div>

  <!-- 新規作成モーダル -->
  <div id="youtube-metadata-new-modal"
       data-modal-target="modal"
       class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-gray-800 rounded-lg p-6 max-w-2xl w-full mx-4 max-h-[80vh] overflow-y-auto">
      <h3 class="text-lg font-semibold text-white mb-4">新しい YouTube メタデータを作成</h3>
      <%= render 'youtube_metadata/form', content: content, youtube_metadata: YoutubeMetadata.new %>
    </div>
  </div>
</div>