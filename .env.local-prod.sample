# ===================================
# Docker Compose Production環境用設定
# ===================================
# このファイルを .env.local-prod にコピーして使用してください
# cp .env.local-prod.sample .env.local-prod

# === Rails基本設定 ===
RAILS_ENV=production
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_LEVEL=info

# === セキュリティ設定 ===
# RAILS_MASTER_KEYはcredentials用
# 取得方法: cat config/credentials/production.key
RAILS_MASTER_KEY=your_production_master_key_here

# ローカル環境でHTTPアクセスする場合はfalseに設定
RAILS_ASSUME_SSL=false
RAILS_FORCE_SSL=false

# === データベース設定 ===
DATABASE_URL=sqlite3:///rails/storage/db/production.sqlite3

# === API Keys ===
# KIE.AI APIキー（音楽生成に必要）
KIE_AI_API_KEY=your_kie_ai_api_key_here

# 本番環境用KIE.AI APIキー（オプション）
PRODUCTION_KIE_API_KEY=your_production_kie_api_key_here

# === パフォーマンス設定 ===
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2

# === ポート設定 ===
# ホストマシンで公開するポート
EXTERNAL_PORT=3001