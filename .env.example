# YouTube API Configuration
# YouTube Data API v3の設定
# Google Cloud Consoleで取得したOAuth2.0クライアントIDとシークレット
# https://console.cloud.google.com/apis/credentials
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:5100/youtube/auth/callback
YOUTUBE_API_KEY=your_youtube_api_key_here

# KIE.AI API Configuration
# KIE.AI音楽生成APIの設定
KIE_API_KEY=your_kie_api_key_here
KIE_API_BASE_URL=https://api.kie.ai/v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/lofi_bgm_development

# Rails Configuration
RAILS_MASTER_KEY=your_rails_master_key_here
SECRET_KEY_BASE=your_secret_key_base_here

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# Mail Configuration (Optional)
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=example.com
SMTP_USER_NAME=your_email@example.com
SMTP_PASSWORD=your_email_password_here

# Storage Configuration (Optional)
# For Active Storage
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET=your_s3_bucket_name